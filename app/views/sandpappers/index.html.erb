<p id="notice"><%= notice %></p>

<h1>Listing Sandpappers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sandpappers.each do |sandpapper| %>
      <tr>
        <td><%= sandpapper.name %></td>
        <td><%= link_to 'Show', sandpapper %></td>
        <td><%= link_to 'Edit', edit_sandpapper_path(sandpapper) %></td>
        <td><%= link_to 'Destroy', sandpapper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

